<% @metrics.each do |description, value| %>
  <h3><%= "#{description}: #{value}" %></h3>
<% end %>

<table class="table text-center mt-4">
  <thead class="table-group-divider">
    <tr>
      <% @headers.each do |header| %>
        <th scope="col"><%= header %></th>
      <% end %>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @data.each do |row| %>
      <tr>
        <% row.each do |cell| %>
          <td><%= cell %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
