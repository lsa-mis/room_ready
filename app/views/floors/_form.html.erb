<%= form_with(model: floor) do |form| %>
  <% if floor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(floor.errors.count, "error") %></h2>

      <ul>
        <% floor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :building_id, style: "display: block" %>
    <%= form.text_field :building_id %>
  </div>

  <div class="d-flex flex-row justify-content-start align-items-center gap-3">
    <%= form.submit "Submit", class: "btn btn-primary" %>
    <%= link_to 'Cancel', :back %>
  </div>
<% end %>
