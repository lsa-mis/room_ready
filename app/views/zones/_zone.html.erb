<div class="card">
  <div class="card-header">
    <p><%= zone.name %></p>
  </div>
  <div class="card-body">
    <p><%= zone.buildings.count %> buildings</p>
    <p><%= zone.total_rooms %> rooms</p>
  </div>
  <div class="d-flex flex-row justify-content-between align-items-center mb-2 m-2">
    <%= link_to "Zone Details", zone_buildings_path(zone), class: "link_to" %>
    <div class="d-flex flex-row justify-content-center align-items-center gap-3">
      <%= link_to edit_zone_path(zone), 'aria-label': "edit_#{zone.id}", 'data-bs-toggle': "tooltip", 'data-bs-placement': "bottom", 'title': "Edit" do %>
        <i class="bi bi-pencil-square text-primary"></i>
      <% end %>
      <%= link_to zone_path(zone), 'aria-label': "delete_#{zone.id}", 'data-bs-toggle': "tooltip", 'data-bs-placement': "bottom", 'title': "Delete", data: { turbo_confirm: "Are you sure you want to delete this zone?" , turbo_method: :delete } do %>
        <i class="bi bi-trash-fill text-danger"></i>
      <% end %>
    </div>
  </div>
</div>
