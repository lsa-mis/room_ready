<%= turbo_frame_tag 'add_building' do %>
  <%= form_with model: [@zone, building], 
    data: { controller: "autosubmit", autosubmit_target: "form" } do |form| %>
    <% if building.errors.any? %>
      <div id="error_explanation" class="text-red-umred px-3 py-2 font-medium rounded-lg mt-3">
        <p class="h3-title"><%= pluralize(building.errors.count, "error") %> prohibited this building from being saved:</p>
        <ul>
          <% building.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
    <label class="bold" for="building_id">List of Unassigned Buildings</label>
    <%= select_tag "building_id", options_for_select(choose_buildings_for_zone), include_blank: "Select Building ...", class: "input_text_field", "data-action" => "change->autosubmit#submitForm" %>
    </div>
  <% end %>
<% end %>
