<%= turbo_frame_tag 'new_rover' do %>  
  <%= form_with(model: rover) do |form| %>
    <% if rover.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(rover.errors.count, "error") %></h2>
        <ul>
          <% rover.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :uniqname, "Create Rover by Uniqname:", style: "display: block" %>
      <div class="d-flex flex-row justify-content-start align-items-center gap-3">
        <%= form.text_field :uniqname, placeholder: "Uniqname", class: "w-50" %>
        <%= form.submit "Create" %>
      </div>
    </div>
  <% end %>
<% end %>
