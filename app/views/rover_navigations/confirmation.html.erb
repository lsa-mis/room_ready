<style>

  @media (min-width: 1025px) {
    .h-custom {
      height: 100vh !important;
    }
  }

  .horizontal-timeline .items {
    border-top: 3px solid;
  }
  
  .horizontal-timeline .items .items-list {
    position: relative;
    margin-right: 0;
    padding-top: 15px;
  }

  .horizontal-timeline .items .items-list p {
    font-size: 14px;
  }

  @media (max-width: 380px) {
    .horizontal-timeline .items .items-list p {
      font-size: 12px;
    }
  }

  .horizontal-timeline .items .items-list:before {
    content: "";
    position: absolute;
    height: 8px;
    width: 8px;
    border-radius: 50%;
    background-color: var(--bs-primary);
    top: 0;
    margin-top: -5px;
  }
</style>
<section>
  <h1 class="text-center">Check Confirmation</h1>
  <div class="container py-3 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3 border-primary">
          <div class="card-body p-2">
            <p class="lead fw-bold mb-2 text-primary">Room Information</p>
            <div class="row">
              <div class="col">
                <p class="small text-muted mb-1">Date</p>
                <p><%= @room_state_today.updated_at.strftime('%m/%d/%Y') %></p>
              </div>
              <div class="col">
                <p class="small text-muted mb-1">Building</p>
                <p><%= @room.floor.building.name %></p>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <p class="small text-muted mb-1">Floor</p>
                <p><%= @room.floor.name %></p>
              </div>
              <div class="col">
                <p class="small text-muted mb-1">Room No.</p>
                <p><%= @room.room_number %></p>
              </div>
            </div>
            <hr />
            <p class="lead fw-bold pb-2 text-primary">Room Check Progress</p>
            <div class="row">
              <div class="col-lg-12">
                <div class="horizontal-timeline">
                  <div class="progress-bar bg-primary"></div>
                  <ul class="list-inline items border-primary d-flex justify-content-between">
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white bg-primary">Common</p>
                    </li>
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white bg-primary">Specific</p>
                    </li>
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white bg-primary">Resources</p>
                    </li>
                    <li class="list-inline-item items-list text-end" style="margin-right: 8px;">
                      <p style="margin-right: -8px;" class="py-1 px-2 rounded text-white bg-success">Done!</p>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <hr />
            <% if @next_room && @previous_room %>
              <p class="lead fw-bold text-primary">Start Checking Another Room</p>
              <div class="d-flex justify-content-between gap-2 mt-3 text-nowrap">
                <% unless @previous_room == @next_room %>
                  <%= link_to new_room_room_state_path(room_id: @previous_room.id), class: "btn btn-success" do %>
                    <i class="bi bi-arrow-left"></i>
                    <span>
                      <%= "#{@previous_room.room_number}, Floor #{@previous_room.floor.name}" %>
                    </span>
                  <% end %>
                <% end %>
                <%= link_to new_room_room_state_path(room_id: @next_room.id), class: "btn btn-success" do %>
                  <span>
                    <%= "#{@next_room.room_number}, Floor #{@next_room.floor.name}" %>
                    <i class="bi bi-arrow-right"></i>
                  </span>
                <% end %>
              </div>

              <div class="dropdown border-0 mt-3 mb-3">
                <button class="btn btn-primary dropdown-toggle" type="button" id="floorDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                  Select Floor
                </button>
                <ul class="dropdown-menu" aria-labelledby="floorDropdownButton">
                  <% @building_floors.each do |floor| %>
                    <% if floor.floor_has_unchecked_rooms? %>
                      <li><%= link_to "Floor #{floor.name}", rooms_rover_navigation_path(floor_id: floor.id), class: "dropdown-item btn-primary" %></li>
                    <% end %>
                  <% end %>
                </ul>
              </div>
            <% else %>
              <p class="lead fw-bold mb-5 text-success">All Rooms in Building are checked!</p>
              <%= link_to "Back to Buildings", buildings_rover_navigation_path(zone_id: @room.floor.building.zone.id), class: "btn btn-primary"%>
            <% end %>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
