<%= turbo_frame_tag note do %>
  <hr>
  <div>
    <div class="">
      <p><%= note.content %></p>
    </div>
    <div class="d-flex flex-row justify-content-start align-items-center gap-3">
      <p>
        Updated on: 
        <%= note.updated_at.strftime('%m/%d/%Y') %> by
        <%= show_user_name_by_id(note.user_id) %>
      </p>
      <div>
        <%= link_to "Edit", edit_note_path(note), class: "btn btn-primary" %>
        <%= link_to 'Delete', note_path(note), class: "link_to", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
      </div>
    </div>
  </div>
<% end %>
